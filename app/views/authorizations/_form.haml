= form_for [@user, @authorization] do |f|
  .form-group
    = f.label :provider
    = f.select :provider, options_for_select(['bearer_token', 'google_oauth2'], @authorization.provider), {}, class: 'form-control'

  .form-group
    = f.label :uid, 'Token'
    = f.text_field :uid, class: 'form-control'

  = f.submit 'Save', class: 'btn btn-success'
