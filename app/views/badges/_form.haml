= form_for @badge do |f|
  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :color, 'Hex Color'
    = f.text_field :color, placeholder: 'F1F1F1', class: 'form-control'
  .form-group
    = f.label :icon
    = f.text_field :icon, class: 'form-control fontawesome-picker'

  = f.submit 'Save', class: 'btn btn-success'

:javascript
  $('.fontawesome-picker').iconpicker();
