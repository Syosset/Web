%ol.breadcrumb
  %li.breadcrumb-item= link_to t('integrations.title'), integrations_path
  %li.breadcrumb-item.active
    = fa_icon 'plug'
    = t('integrations.new.title')

- @providers.each do |provider|
  .integration-provider
    .meta
      .icon
        = fa_icon provider.fa_icon
      .info
        .name= provider.friendly_name
        .description= t("integrations.#{provider.id}.description")
    = link_to new_integration_path(provider: provider.id), class: 'btn' do
      = fa_icon 'plug'
      = t('integrations.new.create')
